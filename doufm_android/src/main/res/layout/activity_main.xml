<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reside_menu_background"
    tools:context="info.doufm.android.Activity.MainActivity"
    android:id="@+id/">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="#7d7cd2a0"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_openmenu_seletor"
            android:id="@+id/btn_open_left_reside_menu"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_gravity="left" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvMusicTitle"
        android:text="加载中..."
        android:singleLine="true"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/ivCover"
        android:layout_alignRight="@+id/tvTimeLeft"
        android:layout_alignEnd="@+id/tvTimeLeft"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTimeLeft"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_above="@+id/ivCover"
        android:layout_alignParentLeft="true" />

    <info.doufm.android.RoundImage.RoundImage
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/ivCover"
        android:scaleType="center"
        border_thickness="5px"
        border_color="#ff8c8889"
        android:src="@drawable/fm"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    </info.doufm.android.RoundImage.RoundImage>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#7d7cd2a0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPlayMusic"
            android:layout_marginBottom="2dp"
            android:background="@drawable/btn_play_selector" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="fill_parent" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnNextSong"
            android:layout_marginBottom="2dp"
            android:background="@drawable/btn_next_selector" />
    </LinearLayout>

</RelativeLayout>
